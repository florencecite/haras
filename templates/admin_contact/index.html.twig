{% extends 'base.html-back.twig' %}

{% block title %}Contact index{% endblock %}

{% block body %}
<a href="{{ path('app_admin_contact_new') }}" class= "btn btn-dark">Nouveau</a>
    <h1>Contact</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>NumeroTelephone</th>
                <th class="text-end">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for contact in contacts %}
            <tr>
                <td>{{ contact.id }}</td>
                <td>{{ contact.nom }}</td>
                <td>{{ contact.prenom }}</td>
                <td>{{ contact.numeroTelephone }}</td>
                <td class="text-end">
                    <a href="{{ path('app_admin_contact_show', {'id': contact.id}) }}" class="btn btn-primary">Afficher</a>
                    <a href="{{ path('app_admin_contact_edit', {'id': contact.id}) }}" class="btn btn-success">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Aucun Contact</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    
{% endblock %}
