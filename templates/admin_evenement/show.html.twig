{% extends 'base.html-back.twig' %}


{% block title %}Evenement{% endblock %}

{% block body %}
<a href="{{ path('app_admin_evenement_index') }}" class="btn btn-primary"> Retour Ã  la liste</a>
<a href="{{ path('app_admin_evenement_edit', {'id': evenement.id}) }}" class="btn btn-success">Modifier</a>
    <h1>Evenement</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ evenement.id }}</td>
            </tr>
            <tr>
                <th>Interne</th>
                <td>{{ evenement.interne }}</td>
            </tr>
            <tr>
                <th>DateDebut</th>
                <td>{{ evenement.dateDebut ? evenement.dateDebut|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>DateFin</th>
                <td>{{ evenement.dateFin ? evenement.dateFin|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Texte</th>
                <td>{{ evenement.texte }}</td>
            </tr>
            
            <th>Images</th>
            <td>
					{% if evenement.imageName is defined and evenement.imageName is not null %}
						<img src="{{asset ('images/evenement/' ~ evenement.imageName)}}" alt="" class="img-fluid">
					{% else %}
						N/A
					{% endif %}
				</td>
        </tbody>
    </table>

    

    {{ include('admin_evenement/_delete_form.html.twig') }}
{% endblock %}
