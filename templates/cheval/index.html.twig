{% extends 'base.html.twig' %}

{% block title %}Chevaux
{% endblock %}

{% block body %}
	<table class="table table-striped">
		<tr>
			<th>Cheval</th>
		</tr>
		{% for cheval in chevaux %}
			<tr>
				<td>
					<a href="{{ path('app_cheval_show', {'id': cheval.id}) }}" class="btn btn-dark">{{ cheval.nom }}</a>
				</td>
			</tr>
		{% else %}
			{# aucun cheval #}
			<tr>
				<td>Aucun cheval</td>
			</tr>
		{% endfor %}
		{# Fin de la boucle #}
	</table>

{% endblock %}
