{% extends 'base.html.twig' %}

{% block title %}Haras de la Cense - Informations sur un Cavalier{% endblock %}

{% block body %}
	<h1 class="ptitre">Cavalier</h1>

	<table class="table table-striped">
		<tr>		
		<td>
		{% if cavalier is defined and cavalier is not null %}
		<a href="{{ asset('images/cavalier/' ~ cavalier.imageName) }}" data-lightbox="{{cavalier.imageName}}"> 
		<img src="{{ asset('images/cavalier/' ~ cavalier.imageName) }}" alt="" class="img-list" >
		</a>
		{% endif %}  
		</td>
			<td>
				<table class="table table-striped">
					<tbody>
						<tr>
							<th>Nom</th>
							<td>{{ cavalier.nom }}
								{{ cavalier.prenom }}</td>
						</tr>
						<tr>
							<th>Mail</th>
							<td>{{ cavalier.mail }}</td>
						</tr>

						{% for cheval in cavalier.chevaux %}
							<tr>
								<th>Cheval</th>
								<td><img src="{{ asset('images/cheval/' ~ cheval.imageName) }}" alt="" class="img-fluid"></td>
							</tr>
						{% else %}
							<tr>
								<th>Cheval</th>
								<td>Aucun Cheval</td>
							</tr>
						{% endfor %}
						<tr>
							<th>Niveau</th>
							<td>{{ cavalier.niveau }}</td>
						</tr>
					</tbody>
				</table>
			</td>
		</tr>
	</table>
{% endblock %}
