{% extends 'base.html-back.twig' %}
{% block title %}Service index{% endblock %}

{% block body %}
<a href="{{ path('app_admin_service_new') }}" class="btn btn-dark">Nouveau</a> 
    <h1>Service</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Type</th>
                <th>Descriptif</th>
                <th class="text-end">actions</th>
            </tr>
        </thead>
        <tbody>
        {% for service in services %}
            <tr>
                <td>{{ service.id }}</td>
                <td>{{ service.type }}</td>
                <td>{{ service.descriptif }}</td>
                <td class="text-end">
    <a href="{{ path('app_admin_service_show', {'id': service.id}) }}" class="btn btn-primary">Afficher</a>
    <a href="{{ path('app_admin_service_edit', {'id': service.id}) }}" class="btn btn-success">Modifier</a>     
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">aucun service</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    
{% endblock %}
