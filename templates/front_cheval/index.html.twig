{% extends 'base.html.twig' %}

{% block title %}Cheval index{% endblock %}

{% block body %}
<a href="{{ path('app_front_cheval_new', {'person_id': person_id}) }}" class="btn btn-dark">Nouveau</a>

    <h1>Cheval</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Lieu</th>
                <th>Alimentation</th>
                <th>Veto</th>
                <th>ImageName</th>
                <th>UpdatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for cheval in chevals %}
            <tr>
                <td>{{ cheval.id }}</td>
                <td>{{ cheval.nom }}</td>
                <td>{{ cheval.lieu }}</td>
                <td>{{ cheval.alimentation }}</td>
                <td>{{ cheval.veto }}</td>
                <td>{{ cheval.imageName }}</td>
                <td>{{ cheval.updatedAt ? cheval.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_front_cheval_show', {'id': cheval.id, 'person_id': person_id} ) }}">Afficher</a>
                    <a href="{{ path('app_front_cheval_edit', {'id': cheval.id, 'person_id': person_id} ) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">Aucun cheval</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    
{% endblock %}
