{% extends 'base.html.twig' %}

{% block title %}Haras de la Cense - Informations sur un Cheval{% endblock %}

{% block body %}
    <h1 class-"ptitre">Cheval</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ cheval.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ cheval.nom }}</td>
            </tr>
            <tr>
                <th>Lieu</th>
                <td>{{ cheval.lieu }}</td>
            </tr>
            <tr>
                <th>Alimentation</th>
                <td>{{ cheval.alimentation }}</td>
            </tr>
            <tr>
                <th>Veto</th>
                <td>{{ cheval.veto }}</td>
            </tr>
            <tr>
                <th>ImageName</th>
                <td>{{ cheval.imageName }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ cheval.updatedAt ? cheval.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_front_cheval_edit', {'person_id':cheval.user, 'id': cheval.id}) }}">Modifier</a>

    {{ include('front_cheval/_delete_form.html.twig') }}
{% endblock %}
